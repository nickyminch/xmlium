<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:xs="http://www.w3.org/2001/XMLSchema"  targetNamespace="http://www.xmlium.org/TestCase" xmlns:tns="http://www.xmlium.org/TestCase" elementFormDefault="qualified" xmlns:steps="http://www.xmlium.org/TestSteps">
	<xs:import schemaLocation="TestSteps.xsd" 
           namespace="http://www.xmlium.org/TestSteps"/>
    <xs:complexType name="Test">
    	<xs:choice>
    		<xs:element name="testSteps" type="steps:StepsType" minOccurs="1" maxOccurs="1"/>
    		<xs:element name="repeat" type="tns:Repeat" minOccurs="1" maxOccurs="1"/>
    	</xs:choice>
    </xs:complexType>

    <xs:element name="test" type="tns:Test"/>

	<xs:complexType name="Repeat">
		<xs:sequence>
			<xs:element name="repeatCount" type="integer" />
			<xs:element name="repeatSteps" type="steps:StepsType" minOccurs="1" maxOccurs="1" />
		</xs:sequence>
	</xs:complexType>
</schema>