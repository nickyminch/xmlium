<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml [
<!ENTITY user  "myTestUser">
<!ENTITY password  "myTestPassword">
]>
<t:test xmlns:t="http://www.xmlium.org/TestCase"
		xmlns:tns="http://www.xmlium.org/TestSteps"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.xmlium.org http://www.xmlium.org/TestCase.xsd">
	<t:testSteps>
		<tns:steps>
			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:waitFor>
							<tns:byXPath>
								<tns:value>//span[.='Zur Anmeldung']</tns:value>
							</tns:byXPath>
						</tns:waitFor>
					</tns:finds>
					<tns:click />
				</tns:element>
			</tns:step>
			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:find>
							<tns:byXPath>
								<tns:value>//input[@id='login:login-email-text']</tns:value>
							</tns:byXPath>
							<!-- tns:byId> <tns:value>login:login-email-text</tns:value> </tns:byId -->
						</tns:find>
					</tns:finds>
					<tns:sendKeys>
						<tns:value>&user;</tns:value>
					</tns:sendKeys>
				</tns:element>
			</tns:step>
			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:find>
							<tns:byXPath>
								<tns:value>//input[@id='login:login-password-text']</tns:value>
							</tns:byXPath>
						</tns:find>
					</tns:finds>
					<tns:sendKeys>
						<tns:value>&password;</tns:value>
					</tns:sendKeys>
				</tns:element>
			</tns:step>
			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:find>
							<tns:byXPath>
								<tns:value>//span[.='Anmelden']</tns:value>
							</tns:byXPath>
						</tns:find>
					</tns:finds>
					<tns:click />
				</tns:element>
			</tns:step>
		</tns:steps>
	</t:testSteps>
</t:test>
