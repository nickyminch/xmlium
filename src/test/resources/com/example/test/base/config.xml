<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml [
<!ENTITY resourcesPathString  "path/to/your/resources">
<!ENTITY url  "http://localhost:8080/">
]>
<tns:testConfig xmlns:tns="http://www.xmlium.org/xsd/1.0/TestConfig" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.xmlium.org/xsd/1.0/TestConfig http://www.xmlium.org/xsd/1.0/TestConfig.xsd">
     <tns:pathString>&resourcesPathString;</tns:pathString>
     <!-- tns:driverClass>org.openqa.selenium.ie.InternetExplorerDriver</tns:driverClass -->
     <!-- tns:driverClass>org.openqa.selenium.firefox.FirefoxDriver</tns:driverClass -->
     <tns:driverClass>org.openqa.selenium.chrome.ChromeDriver</tns:driverClass>
     <tns:timeout>4</tns:timeout>
     <tns:timeUnit>SECONDS</tns:timeUnit>
     <tns:url>&url;</tns:url>
     <tns:fluentWaitIgnore>
       <tns:exceptionClassNames>
       	org.openqa.selenium.NoSuchElementException
       	org.openqa.selenium.StaleElementReferenceException
       </tns:exceptionClassNames>
     </tns:fluentWaitIgnore>
     <tns:locale>de_DE</tns:locale>
     <tns:delay>150</tns:delay>
     <!-- tns:delay>250</tns:delay -->
</tns:testConfig>