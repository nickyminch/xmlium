<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<t:test xmlns:t="http://www.xmlium.org/TestCase"
		xmlns:tns="http://www.xmlium.org/TestSteps"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.xmlium.org http://www.xmlium.org/TestCase.xsd">

	<t:repeat>
		<t:repeatCount>-1</t:repeatCount>
		<t:repeatSteps>
			<tns:steps>
				<tns:step>
					<tns:scrollX>0</tns:scrollX>
					<tns:scrollY>0</tns:scrollY>
					<tns:element>
						<tns:finds>
							<tns:waitFor>
								<tns:byXPath>
									<tns:value>//a[@id='portfolio-name-form:deletePortfolio']
									</tns:value>
								</tns:byXPath>
							</tns:waitFor>
						</tns:finds>
					</tns:element>
				</tns:step>

				<tns:step>
					<tns:scrollX>0</tns:scrollX>
					<tns:scrollY>0</tns:scrollY>
					<tns:element>
						<tns:finds>
							<tns:waitFor>
								<tns:byXPath>
									<tns:value>//a[@id='portfolio-name-form:deletePortfolio']
									</tns:value>
								</tns:byXPath>
							</tns:waitFor>
						</tns:finds>
						<tns:click />
					</tns:element>
				</tns:step>

				<tns:step>
					<tns:element>
						<tns:finds>
							<tns:waitFor>
								<tns:byXPath>
									<tns:value>//button[@id='confirmDeletePortfolioDialogForm:noButton']
									</tns:value>
								</tns:byXPath>
							</tns:waitFor>
						</tns:finds>
						<tns:click />
					</tns:element>
				</tns:step>

				<tns:step>
					<tns:element>
						<tns:finds>
							<tns:waitFor>
								<tns:byXPath>
									<tns:value>//div[@id='confirmDeletePortfolioDialog' and
										contains(@style,'display: none;')]
									</tns:value>
								</tns:byXPath>
							</tns:waitFor>
						</tns:finds>
					</tns:element>
				</tns:step>

				<tns:step>
					<tns:scrollX>0</tns:scrollX>
					<tns:scrollY>0</tns:scrollY>
					<tns:element>
						<tns:finds>
							<tns:waitFor>
								<tns:byXPath>
									<tns:value>//a[@id='portfolio-name-form:deletePortfolio']
									</tns:value>
								</tns:byXPath>
							</tns:waitFor>
						</tns:finds>
						<tns:click />
					</tns:element>
				</tns:step>

				<tns:step>
					<tns:element>
						<tns:finds>
							<tns:waitFor>
								<tns:byXPath>
									<tns:value>//button[@id='confirmDeletePortfolioDialogForm:yesButton']
									</tns:value>
								</tns:byXPath>
							</tns:waitFor>
						</tns:finds>
						<tns:click />
					</tns:element>
				</tns:step>

				<tns:step>
					<tns:element>
						<tns:finds>
							<tns:waitFor>
								<tns:byXPath>
									<tns:value>//div[@id='confirmDeletePortfolioDialog' and
										contains(@style,'display: none;')]
									</tns:value>
								</tns:byXPath>
							</tns:waitFor>
						</tns:finds>
					</tns:element>
				</tns:step>
			</tns:steps>
		</t:repeatSteps>
	</t:repeat>
</t:test>
