<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<tns:testSteps xmlns:tns="http://www.xmlium.org/TestSteps"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.xmlium.org /src/main/xsd/TestSteps.xsd ">
		<tns:steps>
			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:waitFor>
							<tns:byXPath>
								<tns:value>//input[@id='portfolio-form:portfolioName']
								</tns:value>
							</tns:byXPath>
						</tns:waitFor>
					</tns:finds>
					<tns:sendKeys>
						<tns:value>expression:java.lang.Math.random()*1000</tns:value>
					</tns:sendKeys>
				</tns:element>
			</tns:step>

			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:waitFor>
							<tns:byXPath>
								<tns:value>//input[@id='portfolio-form:currency-amount']
								</tns:value>
							</tns:byXPath>
						</tns:waitFor>
					</tns:finds>
					<tns:sendKeys>
						<tns:value>expression:java.lang.Math.random()*100000.0</tns:value>
					</tns:sendKeys>
				</tns:element>
			</tns:step>

			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:waitFor>
							<tns:byXPath>
								<tns:value>//span[.='Speichern']</tns:value>
							</tns:byXPath>
						</tns:waitFor>
					</tns:finds>
					<tns:click />
				</tns:element>
			</tns:step>

			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:waitFor>
							<tns:byXPath>
								<tns:value>//li[contains(@class,'infoMessage')]</tns:value>
							</tns:byXPath>
						</tns:waitFor>
					</tns:finds>
				</tns:element>
			</tns:step>

			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:waitFor>
							<tns:byXPath>
								<tns:value>//li[contains(@class,'infoMessage') and contains(text(), 'Ihr Portfolio wurde erfolgreich gespeichert')]</tns:value>
							</tns:byXPath>
						</tns:waitFor>
					</tns:finds>
				</tns:element>
			</tns:step>


			<tns:step>
				<tns:element>
					<tns:finds>
						<tns:waitFor>
							<tns:byXPath>
								<tns:value>//button[@id='portfolio-form:back']</tns:value>
							</tns:byXPath>
						</tns:waitFor>
					</tns:finds>
					<tns:click />
				</tns:element>
			</tns:step>
		</tns:steps>
</tns:testSteps>
